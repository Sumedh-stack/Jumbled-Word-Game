<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".more_info"
    tools:ignore="MissingDefaultResource">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="This game is designed to increase your knowledge about :"
        android:textColor="#221616"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="About the Game"
        android:textColor="#090909"
        android:textSize="60sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="English"
            android:textColor="#492D04"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Countries"
            android:textColor="#492D04"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Wildlife"
            android:textColor="#492D04"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Fruits"
            android:textColor="#492D04"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="210sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="Vegetables"
            android:textColor="#492D04"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="I hope you will enjoy!!"
            android:textColor="#1B1212"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>